# Environment Variables Template
# Copy this file to .env.local and configure for your environment

# ============================================================================
# FEATURE FLAGS
# Set to 'true' or 'false' to enable/disable experimental features
# ============================================================================

# Monetization Features (paywalls, subscriptions)
VITE_FEATURE_MONETIZATION=false
VITE_FEATURE_MONETIZATION_ROLLOUT=0

# AI Assistant Integration
VITE_FEATURE_AI_ASSISTANT=false
VITE_FEATURE_AI_ASSISTANT_ROLLOUT=0

# Advanced MIDI Routing (inter-module communication)
VITE_FEATURE_ADVANCED_MIDI_ROUTING=true

# Experimental Visualizations
VITE_FEATURE_EXPERIMENTAL_VIZ=false
VITE_FEATURE_EXPERIMENTAL_VIZ_ROLLOUT=0

# Collaboration V2 (enhanced Jam Sessions)
VITE_FEATURE_COLLABORATION_V2=false
VITE_FEATURE_COLLABORATION_V2_ROLLOUT=0

# Cloud Sync (save patterns to cloud)
VITE_FEATURE_CLOUD_SYNC=false
VITE_FEATURE_CLOUD_SYNC_ROLLOUT=0

# Analytics and Telemetry
VITE_FEATURE_ANALYTICS=true

# Beta Features Preview
VITE_FEATURE_BETA=false
VITE_FEATURE_BETA_ROLLOUT=0

# ============================================================================
# SUPABASE CONFIGURATION
# Only needed if using authentication or collaboration features
# ============================================================================

# VITE_SUPABASE_URL=your-project-url.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug logging
# VITE_DEBUG=false

# Force specific environment (development, staging, production)
# VITE_ENV=development
